{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "datagrip-alternative",
  "version": "1.0.0",
  "identifier": "com.datagrip-alternative.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "DataGrip Alternative",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all"
  }
}
